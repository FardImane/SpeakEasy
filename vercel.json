{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      },
      {
        "src": "api/newsletter.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/manifest.json",
        "dest": "/manifest.json"
      },
      {
        "src": "/favicon.ico",
        "dest": "/favicon.ico"
      },
      {
        "src": "/logo192.png",
        "dest": "/logo192.png"
      },
      {
        "src": "/logo512.png",
        "dest": "/logo512.png"
      },
      {
        "src": "/api/newsletter/subscribe",
        "methods": ["POST"],
        "dest": "/api/newsletter.js"
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ],
    "env": {
      "NODE_OPTIONS": "--openssl-legacy-provider"
    }
  }
  