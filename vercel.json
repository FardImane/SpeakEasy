{
    "version": 2,
    "builds": [
      {
        "src": "api/newsletter.js",
        "use": "@vercel/node"
      },
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/newsletter/subscribe",
        "methods": ["POST"],
        "dest": "/api/newsletter.js"
      },
      {
        "src": "/(.*)",
        "dest": "/index.html",
        "continue": true
      }
    ],
    "env": {
      "NODE_OPTIONS": "--openssl-legacy-provider"
    }
  }
  